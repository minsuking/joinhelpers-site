{{/* sitemap.xml — include both regular pages and section (_index.md) pages */}}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{/* 1️⃣ 일반 RegularPages 포함 */}}
  {{ range .Site.RegularPages }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <changefreq>{{ .Sitemap.ChangeFreq | default "daily" }}</changefreq>
    <priority>{{ .Sitemap.Priority | default 0.5 }}</priority>
  </url>
  {{ end }}

  {{/* 2️⃣ _index.md (Section Pages) 포함 — type이 "page"인 경우까지 전부 */}}
  {{ range .Site.Sections }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <changefreq>daily</changefreq>
    <priority>0.5</priority>
  </url>
  {{ end }}

  {{/* 3️⃣ 수동으로 특정 경로 추가 (원하면 여기에 직접 추가 가능) */}}
  <url>
    <loc>https://www.joinhelpers.com/edu/how-to-sign-up-on-bybit-step-by-step/</loc>
    <changefreq>daily</changefreq>
    <priority>0.5</priority>
  </url>
  <url>
    <loc>https://www.joinhelpers.com/edu/how-to-sign-up-on-okx-step-by-step/</loc>
    <changefreq>daily</changefreq>
    <priority>0.5</priority>
  </url>
  <url>
    <loc>https://www.joinhelpers.com/edu/how-to-sign-up-on-bitget-step-by-step/</loc>
    <changefreq>daily</changefreq>
    <priority>0.5</priority>
  </url>
</urlset>
